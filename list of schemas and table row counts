SELECT
    n.nspname AS schema_name,
    t.relname AS table_name,
    pg_total_relation_size(t.oid) AS total_size_bytes,
    pg_total_relation_size(t.oid) / (1024.0 * 1024.0) AS total_size_mb,
    pg_total_relation_size(t.oid) / pg_total_relation_size(0) * 100 AS percentage_of_total,
    pg_total_relation_size(t.relid) AS total_size_bytes_excluding_indexes,
    pg_total_relation_size(t.relid) / (1024.0 * 1024.0) AS total_size_mb_excluding_indexes,
    pg_total_relation_size(t.relid) / pg_total_relation_size(0) * 100 AS percentage_of_total_excluding_indexes,
    pg_total_relation_size(t.relid) - pg_total_relation_size(t.reltoastrelid) AS data_size_bytes,
    pg_total_relation_size(t.relid) - pg_total_relation_size(t.reltoastrelid) / (1024.0 * 1024.0) AS data_size_mb,
    pg_total_relation_size(t.relid) - pg_total_relation_size(t.reltoastrelid) / pg_total_relation_size(0) * 100 AS percentage_of_total_data,
    t.n_live_tup AS row_count
FROM
    pg_class t
JOIN
    pg_namespace n ON t.relnamespace = n.oid
WHERE
    relkind = 'r' -- Only tables (not indexes or other objects)
ORDER BY
    n.nspname,
    t.relname;
---------------------------------------------------
SELECT
    n.nspname AS schema_name,
    t.relname AS table_name,
    pg_total_relation_size(t.oid) AS total_size_bytes,
    pg_total_relation_size(t.oid) / (1024.0 * 1024.0) AS total_size_mb,
    t.reltuples AS row_count
FROM
    pg_class t
JOIN
    pg_namespace n ON t.relnamespace = n.oid
WHERE
    t.relkind = 'r' -- Only tables (not indexes or other objects)
ORDER BY
    n.nspname,
    t.relname;

